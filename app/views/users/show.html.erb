<h2>User Profile</h2></br>
<div class="medium-4 medium-centered columns">
   <div class="card">
     <%= image_tag (@user.avatar) %>
     <div class="card-section">
       <h3><%= @user.first_name %> <%= @user.last_name %></h3>
       <h6> Email: <%= @user.email %></h6>
       <button type="button" class="button"><%= link_to "Delete Account", user_path(current_user), data: {:confirm => 'Are you sure?'}, :method => :delete  %></button></br>
       <button type="button" class="button"><%= link_to "Edit Profile", edit_user_registration_path %></button>
    </div>
  </div>
</div>


<div class="medium-4 medium-centered columns">
   <div class="card">
    <% @foods = Food.where(user_id: @user.id).order("created_at") %>
    <% @foods.each do |food| %>
      <span  data-tooltip aria-haspopup="true" class="has-tip" title="<%=food.name %>"> <h3><%= link_to food.name, food_path(food) %> </h3></span>
      <%= image_tag (food.photo) %>
      <div class="card-section">
        <p><%= food.description %></p>
      </div>
    <% end %>
  </div>
</div>
