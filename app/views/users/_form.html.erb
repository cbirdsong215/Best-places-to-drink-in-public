<%= form_for(@user) do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :avatar %>
  <%= f.text_field :avatar %>

  <%= f.label :password %>
  <%= f.text_field :password %>

  <%= f.label :verify_password %>
  <%= f.text_field :verify_password %>

  <%= f.submit "New User" %>
<% end %>
